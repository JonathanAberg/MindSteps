{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "jsx": "react-native",
    "strict": true,
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "allowJs": false,
    "noEmit": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "types": ["react", "react-native", "node"]
  },
  "include": ["src", "types", "App.tsx", "app.config.ts", "app.json"],
  "exclude": ["node_modules"],
  "extends": "expo/tsconfig.base"
}
